{
  "name": "statuswatch",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "dev:backend": "dotenv -e .env -- npx tsx src/server.ts",
    "dev:frontend": "(cd frontend && npm run dev)",
    "dev:all": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:backend:log": "mkdir -p logs && dotenv -e .env -- npx tsx src/server.ts >> logs/backend.log 2>&1",
    "dev:frontend:log": "mkdir -p logs && (cd frontend && npm run dev >> ../logs/frontend.log 2>&1)",
    "dev:all:log": "concurrently \"npm:dev:backend:log\" \"npm:dev:frontend:log\"",
    "start:pm2": "pm2 start ecosystem.config.cjs",
    "stop:pm2": "pm2 stop ecosystem.config.cjs || true",
    "prisma:generate": "prisma generate",
    "prisma:db:push": "prisma db push",
    "prisma:db:push:envlocal": "dotenv -e .env.local -- prisma db push",
    "prisma:generate:envlocal": "dotenv -e .env.local -- prisma generate",
    "prisma:print-db-url": "dotenv -e .env.local -- node -e \"console.log(process.env.DATABASE_URL)\"",
    "check-env": "node scripts/check-env.js",
    "prisma:db:push:check": "bash scripts/check-env.sh && npm run prisma:db:push:envlocal",
    "prisma:generate:check": "bash scripts/check-env.sh && npm run prisma:generate:envlocal",
    "monitor:run": "npx tsx scripts/run-monitoring.js",
    "gen:jwt": "bash scripts/generate-jwt-secret.sh",
    "build:backend": "tsc -p tsconfig.build.json",
    "db:up": "docker compose up -d db",
    "db:down": "docker compose down",
    "db:seed": "npm run db:up && npm run prisma:db:push:envlocal && npx ts-node prisma/seed.ts",
    "test": "node tests/run-smoke.js",
    "test:unit": "jest --config jest.config.js",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:all": "npm run test:unit && npm test",
    "notify:once": "node scripts/notify-worker.js --once"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@sendgrid/mail": "^8.1.6",
    "@stripe/stripe-js": "^8.5.2",
    "@supabase/supabase-js": "^2.84.0",
    "@types/cors": "^2.8.19",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "cheerio": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.2.2",
    "lucide-react": "^0.554.0",
    "next": "16.0.3",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.10",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "recharts": "^3.5.0",
    "resend": "^6.5.2",
    "stripe": "^20.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/cheerio": "^0.22.35",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
  "@types/supertest": "^2.0.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "jest": "^30.2.0",
    "playwright": "^1.56.1",
    "prisma": "^6.19.0",
  "supertest": "^6.3.3",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "typescript": "^5"
  }
}
